{
    "name": "sbasu/php-chatgpt-helper",
    "description": "A simple, powerful PHP library for integrating with OpenAI's ChatGPT API. Perfect for adding AI capabilities to your PHP applications with minimal setup.",
    "type": "library",
    "keywords": ["php", "chatgpt", "openai", "ai", "api", "helper"],
    "license": "MIT",
    "authors": [
        {
            "name": "Shantanu Basu",
            "email": "shantanubasu123@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "ChatGPTHelper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ChatGPTHelper\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "test-unit": "phpunit --testsuite Unit",
        "test-integration": "phpunit --testsuite Integration",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}